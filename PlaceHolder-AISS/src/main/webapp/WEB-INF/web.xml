	<servlet-mapping>
		<servlet-name>GitHubOAuth2Callback</servlet-name>
		<url-pattern>/oauth2callback/GitHub</url-pattern>
	</servlet-mapping>
	<!--BitbucketOauthController -->
	<servlet>
